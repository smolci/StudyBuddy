@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_Layout-noRegLog.cshtml";
}

<link rel="stylesheet" href="~/css/Index.css" />

<div class="main-layout" style="display: flex; justify-content: center; align-items: center; padding-top: 10%">
    <div class="auth-card">

        <div class="auth-card-header">
            <h2>Log in</h2>
            <p class="muted">Use your local account to continue</p>
        </div>

        <form id="account" method="post" class="auth-form">

            <div asp-validation-summary="ModelOnly"
                 class="auth-alert"
                 role="alert"></div>

            <div class="field">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email"
                       class="input"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email"
                      class="field-error"></span>
            </div>

            <div class="field">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password"
                       class="input"
                       autocomplete="current-password"
                       placeholder="Password" />
                <span asp-validation-for="Input.Password"
                      class="field-error"></span>
            </div>

            <label class="remember">
                <input asp-for="Input.RememberMe"
                       class="checkbox" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>

            <button type="submit"
                    class="btn-primary w100">
                Log in
            </button>

            <div class="auth-links">
                <a asp-page="./Register"
                   asp-route-returnUrl="@Model.ReturnUrl">
                    Register as a new user
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
