@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<link rel="stylesheet" href="~/css/Index.css" />

<div class="auth-card">
    <h3>@ViewData["Title"]</h3>

    <p>Your account contains personal data that you have provided. This page allows you to download or delete that data.</p>
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>

    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="auth-form">
        <button class="btn-primary w100" type="submit">Download Data</button>
    </form>

    <form id="delete-data" asp-page="DeletePersonalData" method="post" class="auth-form" style="margin-top: 10px;">
        <button class="btn-danger" type="submit">Delete Account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
