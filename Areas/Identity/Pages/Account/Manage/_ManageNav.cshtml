@inject SignInManager<User> SignInManager
@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString()?.ToLower() ?? "";
    
    bool IsActive(string page) => currentPage.EndsWith(page.ToLower());
}

<link rel="stylesheet" href="~/css/Index.css" />
<div class="sidebar" style="width: auto;">
    <div class="sidebar-section-title">Navigation</div>

    <ul class="nav-list" style="padding-left: 0; margin-bottom: 0;">
        <li class="nav-item @(IsActive("/Index") ? "active" : "")">
            <a class="nav-link" asp-page="./Index"><span>Profile</span></a>
        </li>
        <li class="nav-item @(IsActive("/Email") ? "active" : "")">
            <a class="nav-link" asp-page="./Email"><span>Email</span></a>
        </li>
        <li class="nav-item @(IsActive("/ChangePassword") ? "active" : "")">
            <a class="nav-link" asp-page="./ChangePassword"><span>Password</span></a>
        </li>
        <li class="nav-item @(IsActive("/PersonalData") ? "active" : "")">
            <a class="nav-link" asp-page="./PersonalData"><span>Personal data</span></a>
        </li>
    </ul>
</div>