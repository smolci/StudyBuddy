@model StudyBuddy.Models.Topic

@{
    ViewData["Title"] = "Edit topic";
    var subjectTopics = ViewBag.SubjectTopics as IEnumerable<StudyBuddy.Models.Topic> ?? Enumerable.Empty<StudyBuddy.Models.Topic>();
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
                <div class="card-title">EDIT TOPIC</div>

                <div class="sidebar-section-title" style="margin-bottom: 12px;">
                    You may change the topic name (and the subject it belongs to) here
                </div>

                <form asp-action="Edit" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="TopicId" />

                    <div class="field">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="input" placeholder="e.g. Scheduling" />
                        <span asp-validation-for="Name" class="field-error"></span>
                    </div>

                    <div class="field">
                        <label asp-for="SubjectId">Subject</label>
                        <select asp-for="SubjectId" class="input" asp-items="ViewBag.SubjectId"></select>
                        <span asp-validation-for="SubjectId" class="field-error"></span>
                    </div>

                    <div class="timer-modal-actions">
                        <button type="submit" class="btn-primary">Save</button>
</form>