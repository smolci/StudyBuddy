
@model StudyBuddy.Models.Topic

@{
    ViewData["Title"] = "Create topic";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
                <div class="card-title">CREATE TOPIC</div>

                <form asp-action="Create" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    <div class="field">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="input" placeholder="e.g. Threads" />
                        <span asp-validation-for="Name" class="field-error"></span>
                    </div>

                    <div class="field">
                        <label asp-for="SubjectId">Subject</label>
                        <select asp-for="SubjectId" class="input" asp-items="ViewBag.SubjectId"></select>
                        <span asp-validation-for="SubjectId" class="field-error"></span>
                    </div>

                    <div class="timer-modal-actions">
                        <button type="submit" class="btn-primary">Create</button>
                        <a asp-action="Index" class="btn-secondary"
                           style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                            Back
                        </a>
                    </div>
                </form>

            </div>
        </section>
    </main>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
