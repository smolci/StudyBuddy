@model StudyBuddy.Models.Topic

@{
    ViewData["Title"] = "Topic details";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
                <div class="card-title">TOPIC DETAILS</div>

                <ul class="task-list">
                    <li class="task-item" style="align-items:center;">
                        <div class="task-left" style="cursor:default;">
                            <div style="font-weight:600;">@Model.Name</div>
                            <div style="color:var(--text-muted); font-size: 13px;">
                                Subject: @(Model.Subject?.Name ?? "â€”")
                            </div>
                        </div>

                        <div style="display:flex; gap:10px; align-items:center;">
                            <a asp-action="Edit" asp-route-id="@Model.TopicId"
                               class="chip" style="text-decoration:none;">
                                Edit
                            </a>

                            <a asp-action="Index"
                               class="chip chip-alt" style="text-decoration:none;">
                                Back
                            </a>
                        </div>
                    </li>
                </ul>

            </div>
        </section>
    </main>
</div>
