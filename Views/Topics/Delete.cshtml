@model StudyBuddy.Models.Topic

@{
    ViewData["Title"] = "Delete topic";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
                <div class="card-title">DELETE TOPIC</div>

                <div class="sidebar-section-title" style="margin-bottom: 10px;">
                    Are you sure you want to delete this topic?
                </div>

                <ul class="task-list">
                    <li class="task-item" style="align-items:center;">
                        <div class="task-left" style="cursor:default;">
                            <div style="font-weight:600;">@Model.Name</div>
                            <div style="color:var(--text-muted); font-size: 13px;">
                                Subject: @(Model.Subject?.Name ?? "â€”")
                            </div>
                        </div>
                    </li>
                </ul>

                <form asp-action="Delete" method="post" style="margin-top: 12px;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TopicId" />

                    <div class="timer-modal-actions">
                        <button type="submit"
                                class="btn-primary"
                                style="background:#fde6d7; color:#6a373b;">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn-secondary"
                           style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                            Back
                        </a>
                    </div>
                </form>

            </div>
        </section>
    </main>
</div>
