@model StudyBuddy.Models.Subject

@{
    ViewData["Title"] = "Delete subject";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
        <div class="card-title">DELETE SUBJECT</div>

        <div class="auth-alert" style="margin-bottom: 12px;">
            Are you sure you want to delete
            <strong>@(Model?.Name ?? "this subject")</strong>?
            This action canâ€™t be undone.
        </div>

        <div class="auth-alert" style="margin-bottom: 14px;">
            <strong>Warning:</strong> This will also delete all related
            <strong>study sessions</strong> and <strong>study tasks</strong> under this subject.
        </div>


        <div class="divider"></div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SubjectId" />

            <div class="timer-modal-actions">
                <button type="submit" class="btn-primary" style="background: #7c444f;">
                    Delete
                </button>

                <a asp-action="Index" class="btn-secondary"
                   style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                    Cancel
                </a>
            </div>
        </form>
            </div>
        </section>
    </main>
</div>
