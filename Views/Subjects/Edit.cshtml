@model StudyBuddy.Models.Subject

@{
    ViewData["Title"] = "Edit subject";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="center-column">
    <div class="tasks-card">
        <div class="card-title">EDIT SUBJECT</div>

        <div class="sidebar-section-title" style="margin-bottom: 12px;">
            You may change the name of the subject here
        </div>

        <form asp-controller="Subjects" asp-action="Edit" method="post" class="auth-form">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="SubjectId" />

            <div class="field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="input" placeholder="e.g. Operating Systems" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>

            <div class="timer-modal-actions">
                <button type="submit" class="btn-primary">Save</button>
                <a asp-action="Index" class="btn-secondary"
                   style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
