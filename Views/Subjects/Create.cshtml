@model StudyBuddy.Models.Subject

@{
    ViewData["Title"] = "Create subject";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="center-column">
    <div class="tasks-card">
        <div class="card-title">CREATE SUBJECT</div>

        <form asp-controller="Subjects" asp-action="Create" method="post" class="auth-form">
            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="input" placeholder="e.g. Databases" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>

            <div class="timer-modal-actions">
                <button type="submit" class="btn-primary">Create</button>
                <a asp-action="Index" class="btn-secondary"
                    style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}