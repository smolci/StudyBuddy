@model StudyBuddy.Models.Subject

@{
    ViewData["Title"] = "Subject details";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="center-column">
    <div class="tasks-card">
        <div class="card-title">SUBJECT DETAILS</div>
        <h1 style="margin: 0 0 12px; font-size: 22px; color: var(--text-main);">
            Details regarding your subject
        </h1>
        <ul class="task-list">
            <li class="task-item">
                <div class="task-left" style="cursor: default;">
                    <span style="font-weight:600;">Name</span>
                </div>
                <div class="task-left" style="cursor: default;">
                    <span>@Model?.Name</span>
                </div>
            </li>

            @* User je optional – če ga imaš naloženega z Include *@
            @if (Model?.User != null)
            {
                <li class="task-item">
                    <div class="task-left" style="cursor: default;">
                        <span style="font-weight:600;">User</span>
                    </div>
                    <div class="task-left" style="cursor: default;">
                        <span>@Model.User.Id</span>
                    </div>
                </li>
            }
        </ul>

        <div class="divider"></div>

        <div class="timer-modal-actions">
            <a asp-action="Edit" asp-route-id="@Model?.SubjectId" class="btn-primary"
                style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                Edit
            </a>

            <a asp-action="Index" class="btn-secondary"
                style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                Back
            </a>
        </div>

    </div>
</div>
</div>