@model IEnumerable<StudyBuddy.Models.StudyTask>

@{
    ViewData["Title"] = "Study Tasks";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
        <div class="card-title">STUDY TASKS</div>

        <h1 style="margin: 0 0 12px; font-size: 22px; color: var(--text-main);">
            Your study tasks
        </h1>

        @if (Model == null || !Model.Any())
        {
            <div class="task-item" style="justify-content: flex-start;">
                <div style="color: var(--text-muted); font-size: 14px;">
                    No study tasks yet.
                </div>
            </div>

            <div style="margin-top: 12px;">
                <a asp-action="Create" class="btn-add" style="text-decoration:none; display:inline-flex; align-items:center; gap:8px;">
                    + Add study task
                </a>
            </div>
        }
        else
        {
            <ul class="task-list">
                @foreach (var item in Model)
                {
                    <li class="task-item" style="align-items: center;">
                        <div class="task-left" style="cursor: default; flex: 1;">
                            <span style="font-weight:600;">@item.Description</span>
                            <div style="font-size: 12px; color: var(--text-muted);">
                                User: @item.User?.Id, Subject: @item.Subject?.Name
                            </div>
                        </div>

                        <div style="display:flex; gap:10px; align-items:center;">
                            <a asp-action="Details" asp-route-id="@item.TaskId"
                               class="chip chip-alt" style="text-decoration:none;">
                                Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.TaskId"
                               class="chip" style="text-decoration:none;">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.TaskId"
                               class="chip" style="text-decoration:none; background:#fde6d7; color:#6a373b;">
                                Delete
                            </a>
                        </div>
                    </li>
                }
            </ul>

            <div style="margin-top: 14px;">
                <a asp-action="Create" class="btn-add" style="text-decoration:none; display:inline-flex; align-items:center; gap:8px;">
                    + Add study task
                </a>
            </div>
        }
            </div>
        </section>
    </main>
</div>
