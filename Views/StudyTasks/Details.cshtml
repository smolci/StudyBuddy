@model StudyBuddy.Models.StudyTask

@{
    ViewData["Title"] = "Study Task Details";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="app-shell">
    <main class="main-layout">
        @await Html.PartialAsync("_Sidebar", null)

        <section class="center-column">
            <div class="tasks-card">
        <div class="card-title">STUDY TASK DETAILS</div>

        <h1 style="margin: 0 0 12px; font-size: 22px; color: var(--text-main);">
            Details regarding your study task
        </h1>

        <ul class="task-list">
            <li class="task-item">
                <div class="task-left" style="cursor: default;">
                    <span style="font-weight:600;">Description</span>
                </div>
                <div class="task-left" style="cursor: default;">
                    <span>@Model?.Description</span>
                </div>
            </li>

            @if (Model?.User != null)
            {
                <li class="task-item">
                    <div class="task-left" style="cursor: default;">
                        <span style="font-weight:600;">User</span>
                    </div>
                    <div class="task-left" style="cursor: default;">
                        <span>@Model.User.Id</span>
                    </div>
                </li>
            }

            @if (Model?.Subject != null)
            {
                <li class="task-item">
                    <div class="task-left" style="cursor: default;">
                        <span style="font-weight:600;">Subject</span>
                    </div>
                    <div class="task-left" style="cursor: default;">
                        <span>@Model.Subject.Name</span>
                    </div>
                </li>
            }
            <li class="task-item">
                <div class="task-left" style="cursor: default;">
                    <span style="font-weight:600;">Duration</span>
                </div>
                <div class="task-left" style="cursor: default;">
                    <span>@Model?.DurationMinutes</span>
                </div>
            </li>

            <li class="task-item">
                <div class="task-left" style="cursor: default;">
                    <span style="font-weight:600;">Completed</span>
                </div>
                <div class="task-left" style="cursor: default;">
                    <span>@Model?.IsCompleted</span>
                </div>
            </li>
        </ul>

        <div class="divider"></div>

        <div class="timer-modal-actions">
            <a asp-action="Edit" asp-route-id="@Model?.TaskId" class="btn-primary"
               style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                Edit
            </a>

            <a asp-action="Index" class="btn-secondary"
               style="text-decoration:none; display:inline-flex; align-items:center; justify-content:center;">
                Back
            </a>
        </div>
            </div>
        </section>
    </main>
</div>
